{
  "name": "behave-gherkin-vsc-support",
  "displayName": "Behave Gherkin VSC Support",
  "description": "VS Code support for Behave/Gherkin: navigate to step defs, highlight undefined steps, and create step skeletons.",
  "version": "0.0.9",
  "publisher": "JagadeeshKumarReddyObulareddy",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:behaveGherkin.goToStepDefinition",
    "onCommand:behaveGherkin.createStepDefinition",
    "onLanguage:feature"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "behaveGherkin.goToStepDefinition",
        "title": "Behave: Go to Step Definition"
      },
      {
        "command": "behaveGherkin.createStepDefinition",
        "title": "Behave: Create Step Definition"
      }
    ],
    "languages": [
      {
        "id": "feature",
        "extensions": [
          ".feature"
        ],
        "aliases": [
          "Gherkin",
          "feature"
        ]
      }
    ],
    "configuration": {
      "title": "Behave Gherkin",
      "properties": {
        "behaveGherkin.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python executable used to run the bundled or workspace find_step.py CLI (e.g. python3, python, /usr/bin/python3, /path/to/venv/bin/python)."
        },
        "behaveGherkin.findStepPath": {
          "type": "string",
          "default": "tools/find_step.py",
          "description": "Relative path to the find_step.py CLI inside the workspace. If the file is not present at this path, the extension will attempt to run a bundled CLI."
        }
      }
    },
    "semanticTokenColors": {
      "tag": {
        "foreground": "#C586C0",
        "fontStyle": "bold"
      },
      "featureKeyword": {
        "foreground": "#4FC1FF",
        "fontStyle": "bold"
      },
      "scenarioKeyword": {
        "foreground": "#4EC9B0",
        "fontStyle": "bold"
      },
      "stepKeyword": {
        "foreground": "#CE9178",
        "fontStyle": "bold"
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.96.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jagadeesh-at-GIT/behave-gherkin-vsc-support.git"
  },
  "files": [
    "out/",
    "tools/find_step.py",
    "README.md",
    "LICENSE"
  ]
}